{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_post.Title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog_post.Slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_post.Content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog_post.Date }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ blog_post.Category }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ blog_post.Featured ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_post_index') }}">back to list</a>

    <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('blog_post/_delete_form.html.twig') }}
{% endblock %}
